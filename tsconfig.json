{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",          
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./",               
    "rootDir": "./",
    "sourceMap": false,
    "declaration": false,
    "types": ["node"]
  },
  "include": ["main.ts"],
  "exclude": ["node_modules"]
}

